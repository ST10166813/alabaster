<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title + Date -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday Service"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 12 Nov 2025"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/tvTitle" />
        </RelativeLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="📍 Grace Hall, Durban"
            android:textSize="13sp"
            android:textColor="#777777"
            android:fontFamily="@font/comfortaa_regular" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#F1F1F1" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join us for a beautiful morning service filled with worship, reflection, and community connection."
            android:textSize="13.5sp"
            android:lineSpacingExtra="3dp"
            android:textColor="#2E2E2E"
            android:fontFamily="@font/comfortaa_regular" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
