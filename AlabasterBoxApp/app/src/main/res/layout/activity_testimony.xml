<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".TestimonyActivity">

    <!-- Background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_flipped"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="6dp"
        android:src="@drawable/back_icon"
        android:contentDescription="Back"
        android:background="@android:color/transparent"
        app:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTIMONIES"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/comfortaa_regular"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- What is a Testimony -->
    <androidx.cardview.widget.CardView
        android:id="@+id/whatIsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/whatIsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHAT IS A TESTIMONY?"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/comfortaa_regular" />

            <TextView
                android:id="@+id/whatIsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A testimony is a personal story of transformation — a heartfelt reflection of how faith, grace, and perseverance have shaped your life. It’s a moment to inspire others by sharing the power of hope, healing, and renewal."
                android:textSize="12.5sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/comfortaa_regular" />

            <Button
                android:id="@+id/addTestimonyBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="ADD YOUR TESTIMONY"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa_regular"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- VIEW ALL -->
    <TextView
        android:id="@+id/viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW ALL"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/comfortaa_regular"
        app:layout_constraintTop_toBottomOf="@id/whatIsCard"
        app:layout_constraintEnd_toEndOf="@id/whatIsCard"
        android:layout_marginTop="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/testimonyRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/viewAll"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Rounded Nav Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeColor="#11000000"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:paddingHorizontal="28dp">

            <!-- HOME -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/home_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#F29A2E"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Empty space for FAB overlap -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- DONATE -->
            <LinearLayout
                android:id="@+id/nav_donate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/donate_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONATE"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#F29A2E"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Add Button (Overlapping Upwards) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:contentDescription="Add Testimony"
        app:backgroundTint="#F29A2E"
        app:srcCompat="@drawable/add_icon"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@id/navBar"
        app:layout_constraintEnd_toEndOf="@id/navBar"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        android:translationY="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
