<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".HomeActivity">

    <!-- Background -->
    <ImageView
        android:id="@+id/bgGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_flipped"
        android:alpha="0.20"/>

    <!-- Top Bar (title + logout) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/logoutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/logout_button"
            android:contentDescription="Logout"
            app:tint="@android:color/black"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Welcome Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/welcomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:strokeColor="#25F29A2E"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back,"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/comfortaa_regular"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faithful Friend ðŸŒ¿"
                android:textSize="14sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/comfortaa_regular"/>

            <View
                android:layout_width="64dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="#F29A2E"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Feature Section (includes the quote card) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore â€¢ Connect â€¢ Serve"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/viewEventsBtn"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#15F29A2E"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/event_icon"
                            app:tint="#F29A2E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/comfortaa_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/PrayerRequestsBtn"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/prayer_icon"
                            app:tint="#F29A2E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prayer Requests"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/comfortaa_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/testimonybtn"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/testimony_icon"
                            app:tint="#F29A2E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Testimonies"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/comfortaa_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/volbtn"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/volunteer_icon"
                            app:tint="#F29A2E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volunteer"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/comfortaa_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 3: Donation card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/donatinbtn"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/donation_icon_black"
                        app:tint="#F29A2E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donate"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/comfortaa_regular"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quote Carousel (soft, cohesive) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quoteCarouselCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#12F29A2E"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFCF8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#F29A2E"
                        android:alpha="0.9"/>

                    <TextView
                        android:id="@+id/quoteCarousel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="â€œFaith does not make things easy â€” it makes them possible.â€ ðŸŒ¿"
                        android:textSize="13.5sp"
                        android:textStyle="italic"
                        android:textColor="#5A5A5A"
                        android:fontFamily="@font/comfortaa_regular"
                        android:lineSpacingExtra="3dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
