<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".AddTestimonyActivity">

    <!-- Soft background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_flipped"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="8dp"
        android:src="@drawable/back_icon"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:elevation="4dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD YOUR TESTIMONY"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_regular"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Outer wrapper (centers content) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Width limiter like other pages -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp">

                <!-- Form stack: put layoutAnimation HERE -->
                <LinearLayout
                    android:id="@+id/formStack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layoutAnimation="@anim/layout_stagger_fade_in">

                    <!-- NAME AND SURNAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="NAME AND SURNAME"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#9A9A9A"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- DATE -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:hint="DATE"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp"
                        app:endIconDrawable="@android:drawable/ic_menu_my_calendar"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#9A9A9A"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TITLE -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:hint="TITLE"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#9A9A9A"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- IMAGE section -->
                    <TextView
                        android:id="@+id/tvImageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="UPLOAD IMAGE (Optional)"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa_regular" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@android:color/transparent"
                        app:strokeColor="#F29A2E"
                        app:strokeWidth="1dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:id="@+id/ivPreview"
                                android:layout_width="88dp"
                                android:layout_height="68dp"
                                android:scaleType="centerCrop"
                                android:src="@android:drawable/ic_menu_gallery" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSelectImage"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/black_outline_btn"
                                android:text="Choose Image"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:fontFamily="@font/comfortaa_regular"
                                app:cornerRadius="12dp"
                                app:iconGravity="textStart"
                                app:iconPadding="6dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- TESTIMONY -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:hint="YOUR TESTIMONY"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTestimony"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="5"
                            android:gravity="top|start"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#9A9A9A"
                            android:fontFamily="@font/comfortaa_regular"
                            android:inputType="textMultiLine" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Submit -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="24dp"
                        android:text="SUBMIT"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa_regular"
                        app:cornerRadius="20dp"
                        android:backgroundTint="#000000"
                        app:rippleColor="#1AFFFFFF" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
