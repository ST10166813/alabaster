<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".AddDonationActivity">

    <!-- Soft background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_flipped"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="8dp"
        android:src="@drawable/back_icon"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp" />

    <!-- Modern Title Section -->
    <LinearLayout
        android:id="@+id/titleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvDonateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONATE NOW"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa_regular"
            android:letterSpacing="0.08"
            android:shadowColor="#26000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:elevation="3dp"
            android:layout_marginBottom="2dp" />

        <View
            android:layout_width="56dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="#F29A2E"
            android:layout_gravity="center_horizontal"
            android:alpha="0.95"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make a difference today"
            android:textColor="#7A7A7A"
            android:textSize="12.5sp"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginTop="2dp"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Trust chips row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURE"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAST"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRUSTED"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />
            </LinearLayout>

            <!-- Elevated form card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/formCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#12000000"
                app:strokeWidth="1dp"
                app:cardCornerRadius="22dp"
                app:contentPadding="18dp">

                <LinearLayout
                    android:id="@+id/formStack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layoutAnimation="@anim/layout_stagger_fade_in"
                    android:animateLayoutChanges="true">

                    <!-- Section header -->
                    <TextView
                        android:id="@+id/sectionChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donation Details"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa_regular"
                        android:textColor="#F29A2E"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:background="#1AF29A2E"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp" />

                    <!-- NAME -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="FULL NAME"
                        app:helperText="Please enter your full legal name"
                        app:helperTextTextColor="#8A8A8A"
                        app:counterEnabled="true"
                        app:counterMaxLength="60"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="6dp"
                        android:background="#11000000"/>

                    <!-- DONATION TYPE -->
                    <TextView
                        android:id="@+id/tvTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONATION TYPE"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa_regular"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="24dp"
                        app:strokeWidth="1dp"
                        app:cardElevation="2dp">

                        <Spinner
                            android:id="@+id/spinnerType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="12dp"
                            android:spinnerMode="dropdown" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- AMOUNT -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="DONATION AMOUNT"
                        app:helperText="Only required for money donations"
                        app:helperTextTextColor="#8A8A8A"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- BANKING DETAILS (Hidden by default) -->
                    <TextView
                        android:id="@+id/tvBankDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="16dp"
                        android:background="@drawable/border_background"
                        android:text="Banking Details:\n\nAccount Name: The Alabaster Box Anoiting Ministries \nBank: First National Bank (FNB)\nAccount Number: 62787787880\nBranch Code: 250655\nReference: Your Name - Donation"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:visibility="gone" />

                    <!-- CONTACT DETAILS -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="CONTACT DETAILS"
                        app:helperText="Phone, email, etc"
                        app:helperTextTextColor="#8A8A8A"
                        app:counterEnabled="true"
                        app:counterMaxLength="80"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- DATE -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="DATE"
                        app:endIconMode="custom"
                        app:endIconDrawable="@android:drawable/ic_menu_my_calendar"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Submit Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="6dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdd"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:text="SUBMIT DONATION"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:backgroundTint="#000000"
                            app:cornerRadius="50dp"
                            app:icon="@android:drawable/ic_menu_send"
                            app:iconPadding="8dp"
                            app:iconGravity="textStart"
                            android:layout_marginBottom="10dp"
                            app:rippleColor="#1AFFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your generosity fuels real impact."
                            android:textColor="#7A7A7A"
                            android:textSize="11.5sp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
