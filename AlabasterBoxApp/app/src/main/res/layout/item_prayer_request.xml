<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="20dp"
    app:strokeWidth="1dp"
    app:strokeColor="#12000000"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sender Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:letterSpacing="0.02"
            android:layout_marginBottom="4dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginBottom="6dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#11000000"
            android:layout_marginBottom="6dp"/>

        <!-- Request Content -->
        <TextView
            android:id="@+id/tvRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prayer request text goes here..."
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginBottom="10dp"/>

        <!-- Status Chip -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending Prayer"
            android:textSize="12.5sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:fontFamily="@font/comfortaa_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="#1A2E7D32"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
