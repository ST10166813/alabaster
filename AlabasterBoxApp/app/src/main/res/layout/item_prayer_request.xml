<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border_background"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:elevation="2dp">

    <!-- Name of person who submitted the request -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="From: Name"
        android:layout_marginBottom="4dp"/>

    <!-- Email of the person -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Email: user@example.com"
        android:layout_marginBottom="6dp"/>

    <!-- Prayer request text -->
    <TextView
        android:id="@+id/tvRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Prayer request text goes here..."
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="3dp"/>

    <!-- Status (e.g., Pending, Prayed Over) -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="Status: Pending Prayer" />

</LinearLayout>
