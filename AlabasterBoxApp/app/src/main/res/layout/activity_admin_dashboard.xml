<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/manageTestimoniesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Testimonies (0 pending)"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textSize="16sp"/>


    <Button
        android:id="@+id/viewPrayerRequestsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Prayer Requests"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textSize="16sp"/>


    <Button
        android:id="@+id/volviewBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Volunteers "
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/addEventBtn"
        android:text="Add New Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btndon"
        android:text="Donations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"/>

</LinearLayout>
