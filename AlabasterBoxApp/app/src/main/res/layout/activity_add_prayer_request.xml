<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".PrayerRequestActivity">

    <!-- Soft background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_flipped"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="8dp"
        android:src="@drawable/back_icon"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:elevation="6dp"/>

    <!-- Title section -->
    <LinearLayout
        android:id="@+id/titleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRAYER REQUEST"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa_regular"
            android:letterSpacing="0.08"
            android:shadowColor="#26000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="4"/>

        <View
            android:layout_width="72dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="#F29A2E"
            android:alpha="0.95"/>

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your request — we’ll stand with you in prayer."
            android:textColor="#7A7A7A"
            android:textSize="12.5sp"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- Scrollable content (sits ABOVE the nav bar) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Chips row -->
            <LinearLayout
                android:id="@+id/chipsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIDENTIAL"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPPORTIVE"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRAYERS"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#F29A2E"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1AF29A2E"
                    android:fontFamily="@font/comfortaa_regular" />
            </LinearLayout>

            <!-- Elevated form card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/formCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#12000000"
                app:strokeWidth="1dp"
                app:cardCornerRadius="22dp"
                app:contentPadding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layoutAnimation="@anim/layout_stagger_fade_in"
                    android:animateLayoutChanges="true">

                    <!-- Section chip -->
                    <TextView
                        android:id="@+id/sectionChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prayer Details"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#F29A2E"
                        android:fontFamily="@font/comfortaa_regular"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:background="#1AF29A2E"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YOUR NAME"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Request -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="YOUR PRAYER REQUEST"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#F29A2E"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRequest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="5"
                            android:gravity="top"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:textSize="13sp"
                            android:textColorHint="#9A9A9A"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/comfortaa_regular"
                            android:inputType="textMultiLine" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Submit -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="22dp"
                        android:text="SUBMIT PRAYER REQUEST"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/comfortaa_regular"
                        app:cornerRadius="50dp"
                        app:backgroundTint="@color/black"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        app:rippleColor="#1AFFFFFF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Rounded Nav Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeColor="#11000000"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="28dp"
            android:weightSum="3">

            <!-- EVENTS (left) -->
            <LinearLayout
                android:id="@+id/eventsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/event_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENTS"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- CENTER (label for FAB lives inside nav for perfect alignment) -->
            <LinearLayout
                android:id="@+id/centerSlot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false">

                <TextView
                    android:id="@+id/fabLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TESTIMONIES"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_marginTop="40dp"/>
            </LinearLayout>

            <!-- DONATE (right) -->
            <LinearLayout
                android:id="@+id/DonateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/donation_icon_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONATE"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Testimony Button (centered, above nav) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:contentDescription="Testimonies"
        app:srcCompat="@drawable/testimony_icon"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@id/navBar"
        app:layout_constraintEnd_toEndOf="@id/navBar"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        android:translationY="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
