<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#12000000"
    app:strokeWidth="1dp"
    app:cardCornerRadius="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header image (top corners rounded via card) -->
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/comfortaa_regular"
                android:letterSpacing="0.02"
                android:text="Name" />

            <!-- Title (sub) -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textColor="#7A7A7A"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Title" />

            <!-- Meta row: date chip -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#2E7D32"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="#1A2E7D32"
                    android:text="25 Dec 2025" />
            </LinearLayout>

            <!-- Body / testimony -->
            <TextView
                android:id="@+id/tvTestimony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14.5sp"
                android:lineSpacingExtra="2dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Testimony / description goes hereâ€¦" />

            <!-- Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="14dp">

                <!-- Approve: outlined green like other admin buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApprove"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Approve"
                    android:textAllCaps="false"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textColor="#2E7D32"
                    app:strokeWidth="1dp"
                    app:strokeColor="#2E7D32"
                    app:cornerRadius="24dp"
                    android:backgroundTint="@android:color/transparent"
                    app:rippleColor="#1A2E7D32"
                    android:layout_marginEnd="8dp" />

                <!-- Reject: outlined danger (subtle) to match style system -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textColor="#C62828"
                    app:strokeWidth="1dp"
                    app:strokeColor="#C62828"
                    app:cornerRadius="24dp"
                    android:backgroundTint="@android:color/transparent"
                    app:rippleColor="#1AC62828" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
